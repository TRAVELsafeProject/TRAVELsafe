
<div>
  <div class="row mb-4 mt-4">
    <div class="col">
      
      <h4>MY COMMENTS</h4>
      
    </div>
  </div>


{{#each comments}}
  <div class="row justify-content-center">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">{{this.cityName}}</h4>
          <h5 class="card-title">{{this.commentTitle}}</h5>
          <h6 class="card-subtitle mb-2 text-muted">Rating: <span class="comment-rating">{{this.rating}}</span> </h6>
          <p class="card-text text-justify" >{{this.comment}}</p>
        </div>

        <div class="row mb-3  ml-4">


          
            <a class="btn btn-sm btn-outline-warning submit-comment warning-button" role="button" href='/my-profile/edit-comment/{{id}}'>EDIT</a> 

            <form action='/my-profile/delete-comment/{{id}}' method="POST" class="d-inline ml-4">
              <button class="submit-comment btn btn-sm btn-outline-danger" type="submit">DELETE</button> 
             </form>
           



        

          


        </div>
 




      </div>
    </div>
  </div>
{{/each}}











</div>







