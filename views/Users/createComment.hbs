<div>
    <div class="container">
        <div class="row card p-3 mt-5 ">

            <div class="row justify-content-center text-center mb-5">
                <div class="col">
                    <h4 class="add-comment-city-title">ADD YOUR COMMENT ABOUT {{city}}</h4>
                </div>
            </div>

        <form action="/create-comment/{{city}}" method="POST">

            <div class="form-group row text-center">
                <div class="form-group col">
                    <label for="commentTitle">COMMENT TITLE</label>
                    <input class="input-group input-group-sm mt-3 text-center" type="text" id="commentTitle" name="commentTitle" maxlength="50" required>
                </div>
            </div>

            <div class="form-group row text-center">
                <div class="form-group col">
                    <label for="comment">COMMENT</label>
                    <textarea class="form-control" type="text" id="comment" name="comment" minlength="100" maxlength="500" required></textarea>
                    <p id="textCounter">0/500 (min. 100 characters)</p>
                </div>
            </div>

            <div class="form-group row text-center">
                <div class="form-group col">
                    <label for="rating">RATING</label>
                    <div class="mt-2">

                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="1" name="rating" value="1">
                            <label class="form-check-label" for="1">1</label>
                        </div>

                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="2" name="rating" value="2">
                            <label class="form-check-label" for="2">2</label>
                        </div>

                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="3" name="rating" value="3">
                            <label class="form-check-label" for="3">3</label>
                        </div>

                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="4" name="rating" value="4">
                            <label class="form-check-label" for="4">4</label>
                        </div>    

                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="5" name="rating" value="5">
                            <label class="form-check-label" for="5">5</label>
                        </div>                       

                    </div>
                </div>
            </div>

             <div class="row text-center">
                 <div class="col">
                    <button class="submit-comment btn btn-outline-info btn-lg" type="submit">PUBLISH</button>                     
                 </div>


             </div>   




        </form>


        </div>




    </div>






</div>


