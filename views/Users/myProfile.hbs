<div>

  <div class="row mb-4 mt-4">
    <div class="col">
      
      <h4>MY PROFILE</h4>
      
    </div>
  </div>
  

  <!-- LISTAS DE LAS CIUDADES AÑADIDAS AL PERFIL DEL USUARIO -->

  <div class="cities-container container card p-3">

    <div class="row justify-content-center text-center mb-2">
      <div class="col">
        <h4>MY CITIES</h4>
      </div>
    </div>

    <div class=" row justify-content-center">

        <div class="col-12 col-md-6 col-lg-6 col-xl-6 text-center">
          <div class="wish-cities list-group">
              <h6 class="list-group-item wish-to-visit-title">WISH TO VISIT</h6>
              {{#each user.wishVisit}}
              <a class="city-name list-group-item list-group-item-action" href="{{this}}">{{this}}</a>
              {{/each}}
          </div>
        </div>

        <div class="col-12 col-md-6 col-lg-6 col-xl-6 text-center">
            <div class="visited-cities list-group">
              <h6 class="list-group-item already-visited-title">ALREADY VISITED</h6>
              {{#each user.alreadyVisited}}
              <a class="city-name list-group-item list-group-item-action" href="{{this}}">{{this}}</a>
              {{/each}}
            </div>
        </div>

    </div>

  </div>

  <!-- SECCIÓN COMENTARIOS DEL USUARIO -->

  <div class="container card p-3 mt-4">

    <div class="row justify-content-center text-center mb-2">
      <div class="col">
        <h4>MY COMMENTS</h4>
      </div>
    </div>

    {{#if result}}

    <div class="row justify-content-center text-center mb-2">
      <div class="col">
        <p>If you want to edit or delete your comments, click the button.</p>
      </div>
    </div>

    <!-- BOTÓN PARA IR A LOS COMENTARIOS DEL USUARIO -->

    <div class="row justify-content-center">
      <div class="col-12 text-center">
        <a class="btn btn-outline-info" role="button" href="/my-profile/my-comments">CHECK MY COMMENTS</a>
      </div>
    </div>

    {{else}}

    <!-- MENSAJE SI EL USUARIO NO TIENE COMENTARIOS -->

    <div class="row justify-content-center text-center mb-2">
      <div class="col">
        <p>You haven't published any comments yet.</p>
      </div>
    </div>

    {{/if}}

  </div>

</div>


