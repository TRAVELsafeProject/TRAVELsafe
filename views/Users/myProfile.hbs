<div>

  <div class="col">
    {{#if user}}
    <h3>{{user.name}}'s cities</h3>
    {{/if}}
  </div>


  <div class="cities-container container">

    <div class="row justify-content-center text-center">
      <div class="wish-cities list-group">
          <ul>
            <h5 class="list-group-item">Wish to visit:</h5>
            {{#each user.wishVisit}}
            <li><a class="city-name list-group-item list-group-item-action" href="{{this}}">{{this}}</a></li>
            {{/each}}
          </ul>
      </div>

      <div class="visited-cities list-group">
          <ul>
            <h5 class="list-group-item">Already visited:</h5>
            {{#each user.alreadyVisited}}
            <li><a class="city-name list-group-item list-group-item-action" href="{{this}}">{{this}}</a></li>
            {{/each}}
          </ul>
      </div>

      <div>
        <a class="btn btn-outline-info" role="button" href="/my-profile/my-comments">CHECK MY COMMENTS</a>
      </div>
    

    </div>

  </div>



</div>


