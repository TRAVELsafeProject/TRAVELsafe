
<div>
    <div class="container">
        <div class="col-12 col-md-8 col-lg-6 col-xl-6 card p-3 mt-5 mx-auto">

            <div class="row text-center mb-2">
                <div class="col">
                    <h4 class="add-comment-city-title">EDIT YOUR COMMENT ABOUT {{result.cityName}}</h4>
                </div>
            </div>

            <div class="row text-center mb-4">
                <div class="col">
                    <a class="btn btn-sm btn-outline-info warning-button " role="button" href='/my-profile/my-comments'>BACK TO MY COMMENTS</a> 
                </div>
            </div>

             <!-- FORMULARIO EDITAR COMENTARIO CIUDAD -->

            <form action="/my-profile/edit-comment/{{result.id}}" method="POST">

                <div class="form-group row ">
                    <div class="form-group col">
                        <label for="commentTitle">COMMENT TITLE</label>
                        <input class="input-group input-group-sm mt-3" value="{{result.commentTitle}}" type="text" id="commentTitle" name="commentTitle" maxlength="50" required>
                    </div>
                </div>

                <div class="form-group row text-left">
                    <div class="form-group col">
                        <label for="comment">COMMENT</label>
                        <textarea class="form-control" rows="5" type="text" id="comment" name="comment" minlength="100" maxlength="500" required>{{result.comment}}</textarea>
                        <p id="textCounter">0/500 (min. 100 characters)</p>
                    </div>
                </div>

                <div class="form-group row text-center">
                    <div class="form-group col">
                        <label for="rating">RATING</label>
                        <div class="mt-2">
                            
                            <span class="d-none" id="rating-span">{{result.rating}}</span>


                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="value-1" name="rating" value="1">
                                <label class="form-check-label" for="1">1</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="value-2" name="rating" value="2">
                                <label class="form-check-label" for="2">2</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="value-3" name="rating" value="3">
                                <label class="form-check-label" for="3">3</label>
                            </div>

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="value-4" name="rating" value="4">
                                <label class="form-check-label" for="4">4</label>
                            </div>    

                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="value-5" name="rating" value="5">
                                <label class="form-check-label" for="5">5</label>
                            </div>                       

                        </div>
                    </div>
                </div>

                <div class="row text-center">
                    <div class="col">
                        <button class="submit-comment btn btn-outline-info btn-lg" type="submit">SAVE CHANGES</button>                     
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>
