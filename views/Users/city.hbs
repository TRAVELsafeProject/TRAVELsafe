<div class="container">

  <div class="container card p-3 mt-3">

      <div class="row justify-content-center text-center">
        <div class="col">
          <h4 class="city-title">{{city}}</h4>
        </div>
      </div>

      <div class="row justify-content-center text-center">
        <div class="col">
          {{#if comments}}
            <span id="total-rating"></span>
            <p>(out of 5)</p>
          {{/if}}
        </div>
      </div>

      <div class="row justify-content-center text-center">

        <div class="col-12 mt-3">
          <form action="/add-wish-city/{{city}}" method="POST">
            {{#if addToWish}}
            <button class="btn btn-outline-info" type="submit">Wish to visit</button>
            {{else}}
            <button class="btn btn-outline-danger" type="submit">Remove from wish visit</button>
            {{/if}}
          </form>
        </div>

        <div class="col-12 mt-2">
          <form action="/add-visited-city/{{city}}" method="POST">
            {{#if addToVisited}}
            <button class="btn btn-outline-info" type="submit">Already visited</button>
            {{else}}
            <button class="btn btn-outline-danger" type="submit">Remove from visited</button>
            {{/if}}
          </form>
        </div>

      </div>

  </div>

  <div class="container card p-1 mt-4">

      <div class="row justify-content-center text-center mb-2">
        <div class="col">
          <h4>COMMENTS</h4>
        </div>
      </div>

      <div class="row justify-content-center text-center mb-2">
        <div class="col">
          {{#if addToVisited}}
            <p>If you want to leave a comment, please add this city to your already visited cities list.</p>
          {{else}}
          {{#if noComment}}
            <p>You've already commented about this city. If you want to edit your comment, check your <a id="my-comments-link"href="/my-profile/my-comments">comments</a> in your profile</p>
          {{else}}
          <a class="btn btn-outline-info" role="button" href="/create-comment/{{city}}">Add a comment</a>
          {{/if}}
          {{/if}}
        </div>
      </div>

    <div class="row justify-content-center">

      {{#if comments}}

      {{#each comments}}

      <div class="col col-md-12 col-lg-12 col-xl-12">
        <div class="card m-2">
          <div class="card-body module">
            <h5 class="card-title">{{this.commentTitle}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{this.name}} {{this.lastName}}</h6>
            <h6 class="card-subtitle mb-2 text-muted">Rating: <span class="comment-rating">{{this.rating}}</span> </h6>
            <p class="card-text text-justify collapse comment-collapse {{this.name}}" aria-expanded="false">{{this.comment}}</p>
            <a role="button" class="collapsed" data-toggle="collapse" href=".{{this.name}}" aria-expanded="false" aria-controls="comment-collapse"></a>
          </div>
        </div>
      </div>

      {{/each}}

      {{else}}
      
        <div class="col col-md-12 col-lg-12 col-xl-12 text-center">
          <p>Nobody has added a comment about this city yet.</p>
        </div>
      
      {{/if}}

    </div>


  </div>
  

</div>


