
<h2>{{city}}</h2>

{{#if comments}}
<span id="total-rating"></span>
{{/if}}

<div class="comments-container">
  {{!-- Aquí irá cada comentario --}}
</div>

<form action="/add-wish-city/{{city}}" method="POST">
{{#if addToWish}}
  <button id="wish-button">Wish to visit</button>
{{else}}
  <button id="wish-button">Remove from wish list</button>
{{/if}}
</form>

<form action="/add-visited-city/{{city}}" method="POST">
{{#if addToVisited}}
  <button id="visited-button">Already visited</button>
{{else}}
  <button id="wish-button">Remove from already visited list</button>
{{/if}}
</form>

<h2>Comments</h2>

{{#each comments}}
<h3>Title: {{this.commentTitle}}</h3>
  <p>Comment: </p>
  <p>{{this.comment}}</p>
  <p>Rating: <span class="comment-rating">{{this.rating}}</span></p>
  <p>Created by: {{this.name}} {{this.lastName}}</p>
{{/each}}

{{#if errorMessage}}
  {{errorMessage}}
{{/if}}

{{#if addToVisited}}
<p>Il you want to leave a comment, please add this city to your already visited cities list.</p>
{{else}}
<a href="/create-comment/{{city}}">Add a comment</a>
{{/if}}