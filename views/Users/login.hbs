
<div class="container">

    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-6 col-xl-4 text-center card p-4 mt-5">
            <div class="login-title">
                <h2>LOGIN</h2>
            </div>

            <form action="/log-in" method="POST">
            
                <div class="form-group">
                    <label for="email"></label>
                    <input type="email" name="email" id="email" placeholder="Introduce your email">    
                </div>
                    
                   
               <div class="form-group">
                    <label for="password"></label>
                    <input type="password" name="password" id="password" placeholder="Introduce a password">
               </div>
                

                <div class="form-group">
                    {{#if errorMessage}}
                        <p class="error-message-login-signup">{{errorMessage}}</p>
                    {{/if}}
                </div>
               
                <div>
                    <button class="btn btn-outline-info">LOG IN</button>
                </div>
                
        
            </form>

        </div>
    </div>
</div>
